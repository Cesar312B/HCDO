{% set roles = app.user.roles %}
{# Mostrar el formulario completo solo para el rol 'ROLE_MEDICO' #}
{% if 'ROLE_MEDICO' in roles %}
{{ form_start(form) }}
<div class="row">
     <div class="col-md-12">
     </br>
                         {{ form_row(form.enfermedad_actual,{
                              attr: {
                                   'placeholder': 'Que Enfermedad Padece Actualmente ',
                               }
                                 }) }}
    </div>
</div>
 <div class="row">
     <div class="col-md-6">
                </br>
                         {{ form_row(form.piel_anexos,{
                              attr: {
                                   'placeholder': 'Piel Anexos',
                               }
                                 }) }}
     </div>
    

    <div class="col-md-6">
    </br>
                         {{ form_row(form.organos_sentidos,{
                              attr: {
                                   'placeholder': 'Órganos Sentidos',
                               }
                                 }) }}
    </div>

     <div class="col-md-6">
     </br>
                         {{ form_row(form.respiratorio,{
                              attr: {
                                   'placeholder': 'Respiratorio',
                               }
                                 }) }}
    </div>
     <div class="col-md-6">
     </br>
                         {{ form_row(form.cardiovascular,{
                              attr: {
                                   'placeholder': 'Cardiovascular',
                               }
                                 }) }}
    </div>
     <div class="col-md-6">
     </br>
                         {{ form_row(form.digestivo,{
                              attr: {
                                   'placeholder': 'Digestivo',
                               }
                                 }) }}
    </div>
     <div class="col-md-6">
     </br>
                         {{ form_row(form.genito_urinario,{
                              attr: {
                                   'placeholder': 'Génito Urinario',
                               }
                                 }) }}
    </div>

     <div class="col-md-6">
     </br>
                         {{ form_row(form.musculo_esqueletico,{
                              attr: {
                                   'placeholder': 'Músculo Esquelético',
                               }
                                 }) }}
    </div>
     <div class="col-md-6">
     </br>
                         {{ form_row(form.endocrino,{
                              attr: {
                                   'placeholder': 'Endócrino',
                               }
                                 }) }}
    </div>
     <div class="col-md-6">
     </br>
