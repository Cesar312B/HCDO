{% extends 'base.html.twig' %}

{% block title %}Tratamiento{% endblock %}

{% block body %}
    <h1>Tratamiento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tratamiento.id }}</td>
            </tr>
            <tr>
                <th>Dosis</th>
                <td>{{ tratamiento.dosis }}</td>
            </tr>
            <tr>
                <th>Frecuencia</th>
                <td>{{ tratamiento.frecuencia }}</td>
            </tr>
            <tr>
                <th>Duracion</th>
                <td>{{ tratamiento.duracion }}</td>
            </tr>
            <tr>
                <th>Indicaciones</th>
                <td>{{ tratamiento.indicaciones }}</td>
            </tr>
            <tr>
                <th>Solicitud_examen</th>
                <td>{{ tratamiento.solicitudExamen }}</td>
            </tr>
            <tr>
                <th>Solicitud_fecha</th>
                <td>{{ tratamiento.solicitudFecha ? tratamiento.solicitudFecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Resultado_examen</th>
                <td>{{ tratamiento.resultadoExamen }}</td>
            </tr>
            <tr>
                <th>Resultado_fecha</th>
                <td>{{ tratamiento.resultadoFecha ? tratamiento.resultadoFecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adjuntar_archivo</th>
                <td>{{ tratamiento.adjuntarArchivo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tratamiento_index') }}">Regresar a la Lista</a>

    <a href="{{ path('tratamiento_edit', {'id': tratamiento.id}) }}">Editar</a>

    {{ include('tratamiento/_delete_form.html.twig') }}
{% endblock %}
