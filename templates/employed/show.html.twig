{% block body %}
<div class="card-body p-5 bg-white rounded">
  

    <div class="row py-5 mt-4 align-items-center">
        <!-- For Demo Purpose -->
        <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
                    <div class="table-responsive">
            
            <table class="table">
        <tbody>
             <h4>Empleado</h4>
            <tr>
                <th>Cedula</th>
                <td>{{ emp.Cedula }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ emp.Nombre }} {{ emp.Apellido }}</td>
            </tr>
            
            <tr>
                <th>Foto</th>
                <td><img src="{{ asset('uploads/'~emp.Foto) }}" alt="..." width="50" class="mr-3 rounded-circle img-thumbnail shadow-sm"></td>
            </tr>
           
        </tbody>
    </table> 
   </div>
        </div>

        <!-- Registeration Form -->
        <div class="col-md-7 col-lg-6 ml-auto">
        {{ form_start(form) }}
      {{ form_widget(form.estado) }} </br>
                <div class="row">
                 
                    <div class="input-group col-lg-6 mb-4">
                      {{ form_widget(form.Carrera) }}
                    </div>

                    <!-- Last Name -->
                    <div class="input-group col-lg-6 mb-4">
                       {{ form_widget(form.Materia) }} 
                        
                    </div>

                     <div class="input-group col-lg-12 mb-4">
                         {{ form_widget(form.grupo) }}
                        
                    </div>
    
        </br>
    <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>

</div>
{{ form_end(form) }}

        </div>
       
    </div>


      <div class="table-responsive">
        <table class="table">
        <thead>
            <tr>
                <th>Carrera</th>
                <th>Materia</th>
                <th>Nivel</th>
                <th>Paralelo</th>
               
               
            </tr>
        </thead>
        <tbody>
        {% for n in paralelo %}
            <tr>
                <td>{{ n.Carrera }}</td>
               <td>{{ n.Materia }}</td>
               <td>{{ n.Nivel}}</td>
                <td>{{n.Paralelo}} </td>
               
                
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
      </div>
      


   <a href="{{ path('employed_index') }}">Regresar a la lista</a>
   
</div>
   
{% endblock %}

{% block javascripts %}

<script> 
        $(function() {
  // Sidebar toggle behavior
  $('#sidebarCollapse').on('click', function() {
    $('#sidebar, #content').toggleClass('active');
  });
});
</script>
<script>
        var $notas_Carrera = $('#paralelo_Carrera')
        var $token = $('#paralelo_token')
$notas_Carrera.change(function ()
{
    var $form =$(this).closest('form')
    var data={}
    data[$token.attr('name')]= $token.val()
    data[$notas_Carrera.attr('name')]= $notas_Carrera.val()

    $.post($form.attr('action'),data).then(function (response)
    {
        $('#paralelo_Materia').replaceWith(
            $(response).find('#paralelo_Materia')
        )
    })

})
function log($msg){
    console.log($msg)
}
</script>
{% endblock %}


