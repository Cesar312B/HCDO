{% extends 'base.html.twig' %}

{% block title %}Edit CIE{% endblock %}

{% block body %}
<div class="card-body p-5 bg-white rounded">
    <h1>Editar enfermedad CIE10</h1>

  {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">
      <i class="fas fa-save"></i>
    <p>{{ button_label|default('Editar') }}<p></button>
{{ form_end(form) }}

    <button class="btn btn-block btn-outline-warning btn-sm">
      <a href="{{ path('c_i_e_index') }}"><i class="fas fa-chevron-left">Regresar a la CIE10</i></a>
    </button>

  <form method="post" action="{{ path('c_i_e_delete', {'id': c_i_e.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c_i_e.id) }}">

    <button type="button" class="btn btn-block btn-outline-danger btn-sm">
      <i class="fas fa-trash-alt">
        Eliminar
      </i>
    </button>
</form>

</div>
{% endblock %}
